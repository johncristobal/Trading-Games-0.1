<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nowoscmexico.com.tradinggames_1.user.RegisterUser"
    tools:showIn="@layout/activity_register_user">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/iconface2"
                android:hint="Nombre"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextcorreo"
                android:drawableLeft="@drawable/iconface2"
                android:hint="Correo electr칩nico"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_below="@+id/editTextName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicaci칩n"
                android:id="@+id/textViewlocation"
                android:drawableLeft="@drawable/iconface2"
                android:layout_below="@+id/editTextcorreo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:onClick="openMapToSelectLocation" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/iconface2"
                android:layout_below="@+id/editTextcorreo"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewlocation"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:src="@drawable/iconface2"
                    android:layout_marginTop="5dp" />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewSpinnerHorarios"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/imageView6"
                    android:layout_marginLeft="75dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:src="@drawable/iconface2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp" />
            </RelativeLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextpassword"
                android:drawableLeft="@drawable/iconface2"
                android:hint="Contrase침a"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextconfirma"
                android:drawableLeft="@drawable/iconface2"
                android:hint="Confirmar contrase침a"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_below="@+id/editTextpassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al crear la cuenta, acepto las condiciones de Privacidad y Cookies"
                android:id="@+id/checkBox"
                android:layout_below="@+id/editTextconfirma"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:textSize="11sp"
                android:layout_marginTop="40dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Leer Condiciones"
                android:id="@+id/textView7"
                android:layout_below="@+id/checkBox"
                android:layout_centerHorizontal="true"
                android:onClick="openCondicionesPage"
                android:layout_marginTop="10dp"
                android:textColor="#009dff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:id="@+id/button2"
                android:gravity="center_horizontal"
                android:backgroundTint="#103cde"
                android:layout_alignWithParentIfMissing="false"
                android:onClick="validateInfoandInit"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
