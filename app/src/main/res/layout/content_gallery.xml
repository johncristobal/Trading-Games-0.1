        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/back"
        android:layout_below="@+id/gallery1"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp" /-->

</RelativeLayout>
